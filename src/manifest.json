{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*.phind.com/*",
    "*://*.perplexity.ai/*",
    "*://google.com/search*",
    "*://chatgpt.com/*",
    "*://*.claude.ai/*"
  ],
  "background": {
    "{{firefox}}.scripts": ["src/background.imba"],
    "{{chrome}}.service_worker": "src/background.imba"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.phind.com/*",
        "*://*.perplexity.ai/*",
        "*://*.google.com/search*",
        "*://chatgpt.com/*",
        "*://*.claude.ai/*"
      ],
      "js": ["src/content.imba"]
    }
  ],
  "{{chrome}}.action": {
    "default_icon": {
      "16": "assets/icons/icon_disabled-16.png",
      "48": "assets/icons/icon_disabled-48.png",
      "128": "assets/icons/icon_disabled-128.png"
    }
  },
  "{{firefox}}.browser_action": {
    "default_icon": {
      "16": "assets/icons/icon_disabled-16.png",
      "48": "assets/icons/icon_disabled-48.png",
      "128": "assets/icons/icon_disabled-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "options_ui": {
    "page": "src/options/options.html"
  },
  "{{firefox}}.browser_specific_settings": {
      "gecko": {
        "id": "savemyphind@hugocollin.com",
        "strict_min_version": "109.0"
      }
    }
}